{
  "name": "twitch-bot",
  "version": "1.0.0",
  "description": "A Twitch chat bot for MrDemonWolf community.",
  "main": "app.js",
  "type": "module",
  "scripts": {
    "start": "node dist/app.js",
    "dev": "tsx watch src/app.ts",
    "build": "rm -rf dist/ && tsc -p . --outDir dist",
    "lint": "eslint . --ext .js --fix",
    "format": "prettier-eslint --write $PWD/'**/*.{js,json}'",
    "db:import": "tsx src/scripts/importCommands.ts",
    "test": "cross-env NODE_ENV=test mocha tests --exit"
  },
  "author": "MrDemonWolf, Inc",
  "license": "MIT",
  "dependencies": {
    "@community-bot/db": "workspace:*",
    "@community-bot/env": "workspace:*",
    "@community-bot/server": "workspace:*",
    "@twurple/auth": "^7.2.0",
    "@twurple/chat": "^7.2.0",
    "consola": "^3.4.2",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "node-cron": "^4.1.0",
    "zod": "^3.25.61"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^24.0.0",
    "@types/node-cron": "^3.0.11",
    "eslint": "^9.28.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-promise": "^7.2.1",
    "prettier-eslint-cli": "^8.0.1",
    "tslib": "^2.8.1",
    "tsx": "^4.21.0",
    "typescript": "^5.8.3"
  }
}

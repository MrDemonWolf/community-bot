model TwitchChannel {
  id                 String              @id @default(uuid())
  twitchChannelId    String
  username           String?
  displayName        String?
  profileImageUrl    String?
  isLive             Boolean             @default(false)
  lastStreamTitle    String?
  lastGameName       String?
  lastStartedAt      DateTime?
  DiscordGuild       DiscordGuild?       @relation(fields: [guildId], references: [id])
  guildId            String?
  TwitchNotification TwitchNotification[]
  joinedAt           DateTime            @default(now())
  updatedAt          DateTime            @updatedAt

  // Per-channel notification overrides (null = use guild default)
  notificationChannelId String?
  notificationRoleId    String?

  // Behavior toggles
  updateMessageLive  Boolean @default(true)
  deleteWhenOffline  Boolean @default(false)
  autoPublish        Boolean @default(false)

  // Custom message support
  useCustomMessage     Boolean @default(false)
  customOnlineMessage  String?
  customOfflineMessage String?

  @@unique([twitchChannelId, guildId])
}

model TwitchNotification {
  id              String        @id @default(uuid())
  messageId       String
  channelId       String
  guildId         String
  twitchChannelId String
  isLive          Boolean       @default(true)
  streamStartedAt DateTime?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  DiscordGuild    DiscordGuild? @relation(fields: [guildId], references: [guildId])
  TwitchChannel   TwitchChannel? @relation(fields: [twitchChannelId], references: [id])
}

model TwitchCredential {
  id                  String   @id @default(uuid())
  userId              String   @unique
  accessToken         String
  refreshToken        String
  expiresIn           Int
  obtainmentTimestamp BigInt
  scope               String[]
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
}

enum TwitchResponseType {
  SAY
  MENTION
  REPLY
}

enum TwitchAccessLevel {
  EVERYONE
  SUBSCRIBER
  REGULAR
  VIP
  MODERATOR
  LEAD_MODERATOR
  BROADCASTER
}

enum TwitchStreamStatus {
  ONLINE
  OFFLINE
  BOTH
}

model TwitchChatCommand {
  id             String             @id @default(uuid())
  name           String
  enabled        Boolean            @default(true)
  response       String
  responseType   TwitchResponseType @default(SAY)
  globalCooldown Int                @default(0)
  userCooldown   Int                @default(0)
  accessLevel    TwitchAccessLevel  @default(EVERYONE)
  limitToUser    String?
  streamStatus   TwitchStreamStatus @default(BOTH)
  hidden         Boolean            @default(false)
  aliases        String[]           @default([])
  keywords       String[]           @default([])
  regex          String?
  useCount       Int                @default(0)
  expiresAt      DateTime?
  botChannelId   String?
  botChannel     BotChannel?        @relation(fields: [botChannelId], references: [id], onDelete: Cascade)
  createdAt      DateTime           @default(now())
  updatedAt      DateTime           @updatedAt

  @@unique([name, botChannelId])
}

model Regular {
  id              String   @id @default(uuid())
  twitchUserId    String?  @unique
  twitchUsername   String?
  discordUserId   String?  @unique
  discordUsername  String?
  addedBy         String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model BotChannel {
  id               String                   @id @default(uuid())
  userId           String                   @unique
  twitchUsername    String
  twitchUserId     String                   @unique
  enabled          Boolean                  @default(true)
  muted            Boolean                  @default(false)
  aiShoutoutEnabled Boolean                 @default(false)
  disabledCommands String[]                 @default([])
  joinedAt         DateTime                 @default(now())
  updatedAt        DateTime                 @updatedAt
  user             User                     @relation(fields: [userId], references: [id], onDelete: Cascade)
  commandOverrides DefaultCommandOverride[]
  customCommands   TwitchChatCommand[]
  quotes           Quote[]
  counters         TwitchCounter[]
  timers           TwitchTimer[]
  spamFilter       SpamFilter?
  songRequests        SongRequest[]
  songRequestSettings SongRequestSettings?
  playlists           Playlist[]
  giveaways           Giveaway[]
}

model Quote {
  id           String     @id @default(uuid())
  quoteNumber  Int
  text         String
  game         String?
  addedBy      String
  source       String     @default("twitch")
  botChannelId String
  botChannel   BotChannel @relation(fields: [botChannelId], references: [id], onDelete: Cascade)
  createdAt    DateTime   @default(now())

  @@unique([quoteNumber, botChannelId])
}

model TwitchCounter {
  id           String     @id @default(uuid())
  name         String
  value        Int        @default(0)
  botChannelId String
  botChannel   BotChannel @relation(fields: [botChannelId], references: [id], onDelete: Cascade)
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  @@unique([name, botChannelId])
}

model TwitchTimer {
  id              String     @id @default(uuid())
  name            String
  enabled         Boolean    @default(true)
  message         String
  intervalMinutes Int        @default(5)
  chatLines       Int        @default(0)
  botChannelId    String
  botChannel      BotChannel @relation(fields: [botChannelId], references: [id], onDelete: Cascade)
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt

  @@unique([name, botChannelId])
}

model SpamFilter {
  id                  String            @id @default(uuid())
  botChannelId        String            @unique
  botChannel          BotChannel        @relation(fields: [botChannelId], references: [id], onDelete: Cascade)

  // Caps filter
  capsEnabled         Boolean           @default(false)
  capsMinLength       Int               @default(15)
  capsMaxPercent      Int               @default(70)

  // Links filter
  linksEnabled        Boolean           @default(false)
  linksAllowSubs      Boolean           @default(true)

  // Symbols filter
  symbolsEnabled      Boolean           @default(false)
  symbolsMaxPercent   Int               @default(50)

  // Emotes filter
  emotesEnabled       Boolean           @default(false)
  emotesMaxCount      Int               @default(15)

  // Repetition filter
  repetitionEnabled   Boolean           @default(false)
  repetitionMaxRepeat Int               @default(10)

  // Banned words filter
  bannedWordsEnabled  Boolean           @default(false)
  bannedWords         String[]          @default([])

  // Shared settings
  exemptLevel         TwitchAccessLevel @default(SUBSCRIBER)
  timeoutDuration     Int               @default(5)
  warningMessage      String            @default("Please don't spam.")
}

model SpamPermit {
  id           String   @id @default(uuid())
  username     String
  botChannelId String
  expiresAt    DateTime
  createdAt    DateTime @default(now())

  @@index([username, botChannelId])
}

model SongRequest {
  id               String     @id @default(uuid())
  position         Int
  title            String
  requestedBy      String
  youtubeVideoId   String?
  youtubeDuration  Int?
  youtubeThumbnail String?
  youtubeChannel   String?
  source           String     @default("viewer")
  botChannelId     String
  botChannel       BotChannel @relation(fields: [botChannelId], references: [id], onDelete: Cascade)
  createdAt        DateTime   @default(now())

  @@index([botChannelId, position])
}

model SongRequestSettings {
  id               String            @id @default(uuid())
  botChannelId     String            @unique
  botChannel       BotChannel        @relation(fields: [botChannelId], references: [id], onDelete: Cascade)
  enabled          Boolean           @default(false)
  maxQueueSize     Int               @default(50)
  maxPerUser       Int               @default(5)
  minAccessLevel   TwitchAccessLevel @default(EVERYONE)
  maxDuration      Int?
  autoPlayEnabled  Boolean           @default(false)
  activePlaylistId String?
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
}

model DefaultCommandOverride {
  id           String            @id @default(uuid())
  botChannelId String
  commandName  String
  accessLevel  TwitchAccessLevel
  botChannel   BotChannel        @relation(fields: [botChannelId], references: [id], onDelete: Cascade)

  @@unique([botChannelId, commandName])
}

model Giveaway {
  id           String          @id @default(uuid())
  title        String
  keyword      String
  isActive     Boolean         @default(true)
  winnerName   String?
  botChannelId String
  botChannel   BotChannel      @relation(fields: [botChannelId], references: [id], onDelete: Cascade)
  entries      GiveawayEntry[]
  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt

  @@index([botChannelId, isActive])
}

model GiveawayEntry {
  id             String   @id @default(uuid())
  giveawayId     String
  giveaway       Giveaway @relation(fields: [giveawayId], references: [id], onDelete: Cascade)
  twitchUsername  String
  twitchUserId   String
  createdAt      DateTime @default(now())

  @@unique([giveawayId, twitchUserId])
}

model Playlist {
  id           String          @id @default(uuid())
  name         String
  botChannelId String
  botChannel   BotChannel      @relation(fields: [botChannelId], references: [id], onDelete: Cascade)
  entries      PlaylistEntry[]
  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt

  @@unique([name, botChannelId])
}

model PlaylistEntry {
  id               String   @id @default(uuid())
  position         Int
  title            String
  youtubeVideoId   String?
  youtubeDuration  Int?
  youtubeThumbnail String?
  youtubeChannel   String?
  playlistId       String
  playlist         Playlist @relation(fields: [playlistId], references: [id], onDelete: Cascade)
  createdAt        DateTime @default(now())

  @@index([playlistId, position])
}

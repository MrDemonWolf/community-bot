{
  "name": "community-bot",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "db:push": "turbo -F @community-bot/db db:push",
    "db:studio": "turbo -F @community-bot/db db:studio",
    "db:generate": "turbo -F @community-bot/db db:generate",
    "db:migrate": "turbo -F @community-bot/db db:migrate"
  },
  "packageManager": "pnpm@10.29.1",
  "dependencies": {
    "dotenv": "catalog:",
    "zod": "catalog:",
    "@community-bot/env": "workspace:*"
  },
  "devDependencies": {
    "typescript": "catalog:",
    "@types/node": "^22.13.14",
    "@community-bot/config": "workspace:*",
    "turbo": "^2.6.3"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@prisma/engines",
      "prisma",
      "esbuild",
      "sharp"
    ]
  }
}
